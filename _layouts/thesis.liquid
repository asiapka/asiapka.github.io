---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <h2 class="post-subtitle">{{ page.subtitle }}</h2>
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>{{ site.data[site.active_lang].strings.references }}</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  <!-- Social -->
  {% if page.social %}
    <div class="social">
      <div class="contact-icons">{% include social.liquid %}</div>
    </div>
  {% endif %}
</div>

<!-- SEO Meta Tags -->
<meta name="description" content="{{ page.description | default: page.subtitle }}">
<meta name="keywords" content="{{ page.keywords | join: ', ' }}">
<meta property="og:title" content="{{ page.title }}">
<meta property="og:description" content="{{ page.description | default: page.subtitle }}">
<meta property="og:image" content="{{ site.url }}{{ site.baseurl }}/assets/img/{{ page.og_image | default: 'Siapka_Work_AI_Aristotle_PhD_Cover.png' }}">
<meta property="og:url" content="{{ site.url }}{{ site.baseurl }}{{ page.url }}">
<meta name="twitter:card" content="summary_large_image">
